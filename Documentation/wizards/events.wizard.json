{
  "version": 1,
  "entity": "events",
  "types": [
    {
      "id": "hearing",
      "label": "Court Hearing",
      "category": "legal",
      "defaultEmoji": "‚öñÔ∏è",
      "defaultIconPath": "court.svg",
      "fields": [
        {
          "id": "date",
          "label": "Date",
          "type": "date",
          "required": true
        },
        {
          "id": "hearing_type",
          "label": "Hearing Type",
          "type": "select",
          "options": [
            "Arraignment",
            "Preliminary Examination",
            "Pretrial Hearing",
            "Status Conference",
            "Motion Hearing",
            "Final Pretrial",
            "Trial",
            "Sentencing",
            "Postconviction Hearing"
          ],
          "required": true
        },
        {
          "id": "motion_specify",
          "label": "Specify Motions",
          "type": "textarea",
          "show_if": { "hearing_type": "Motion Hearing" },
          "help": "List the motions being heard"
        },
        {
          "id": "motion_witness_testimony",
          "label": "Witness Testimony Received?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Motion Hearing" }
        },
        {
          "id": "motion_witnesses",
          "label": "Select Witnesses",
          "type": "person_multi_select",
          "show_if": { "motion_witness_testimony": "Yes" },
          "help": "Select witnesses who testified"
        },
        {
          "id": "trial_volume",
          "label": "Trial Volume Number",
          "type": "text",
          "show_if": { "hearing_type": "Trial" },
          "help": "Specify volume number if applicable"
        },
        {
          "id": "trial_jury_selected",
          "label": "Jury Selected?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Trial" }
        },
        {
          "id": "trial_verdict_reached",
          "label": "Verdict Reached?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Trial" }
        },
        {
          "id": "postconviction_witness_testimony",
          "label": "Witness Testimony Received?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Postconviction Hearing" }
        },
        {
          "id": "postconviction_witnesses",
          "label": "Select Witnesses",
          "type": "person_multi_select",
          "show_if": { "postconviction_witness_testimony": "Yes" },
          "help": "Select witnesses who testified"
        },
        {
          "id": "court",
          "label": "Court",
          "type": "select",
          "options": ["District Court", "Circuit Court", "Court of Appeals", "Supreme Court"],
          "required": true
        },
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea"
        }
      ],
      "logic": [],
      "filename": [
        {
          "id": "default",
          "template": "{{date|YYYY-MM-DD}}_{{hearing_type|slug}}_hearing"
        }
      ],
      "metadata": ["hearing", "{{hearing_type}}", "{{court}}"]
    },
    {
      "id": "filing",
      "label": "Court Filing",
      "category": "legal",
      "defaultEmoji": "üìã",
      "defaultIconPath": "filing.svg",
      "fields": [
        {
          "id": "date",
          "label": "Filing Date",
          "type": "date",
          "required": true
        },
        {
          "id": "party_filing",
          "label": "Party Filing",
          "type": "select",
          "options": ["Prosecutor", "Defendant", "Judge"],
          "required": true
        },
        {
          "id": "filing_type_party",
          "label": "Filing Type",
          "type": "select",
          "options": [
            "Complaint",
            "Information",
            "Discovery Demand",
            "Notice",
            "Disclosure",
            "Motion / Brief",
            "Proposed Jury Instruction",
            "Sentencing Memorandum",
            "Postconviction Motion",
            "Appellate Brief/Application"
          ],
          "show_if": { "party_filing": { "in": ["Prosecutor", "Defendant"] } },
          "required": true
        },
        {
          "id": "notice_type",
          "label": "Notice Type",
          "type": "select",
          "options": ["Other Acts", "Other"],
          "show_if": { "filing_type_party": "Notice" }
        },
        {
          "id": "notice_other_specify",
          "label": "Specify Notice Type",
          "type": "text",
          "show_if": { "notice_type": "Other" }
        },
        {
          "id": "disclosure_specify",
          "label": "Specify Disclosure",
          "type": "text",
          "show_if": { "filing_type_party": "Disclosure" }
        },
        {
          "id": "motion_brief_specify",
          "label": "Specify Motion/Brief",
          "type": "text",
          "show_if": { "filing_type_party": "Motion / Brief" }
        },
        {
          "id": "filing_type_judge",
          "label": "Filing Type",
          "type": "select",
          "options": [
            "Scheduling Order",
            "Bindover",
            "Ruling on Motion",
            "Other Order",
            "Judgment of Sentence"
          ],
          "show_if": { "party_filing": "Judge" },
          "required": true
        },
        {
          "id": "ruling_motion_specify",
          "label": "Specify Motion",
          "type": "text",
          "show_if": { "filing_type_judge": "Ruling on Motion" }
        },
        {
          "id": "other_order_specify",
          "label": "Specify Order",
          "type": "text",
          "show_if": { "filing_type_judge": "Other Order" }
        },
        {
          "id": "has_source_document",
          "label": "Link Source Document?",
          "type": "select",
          "options": ["Yes - Link Existing Source", "Yes - Upload New Source", "No"],
          "help": "Link this filing to the actual court document"
        }
      ],
      "logic": [],
      "filename": [
        {
          "id": "motion_brief_party",
          "when": { "filing_type_party": "Motion / Brief" },
          "template": "{{party_filing}}'s Motion for {{motion_brief_specify}}"
        },
        {
          "id": "notice_party",
          "when": { "filing_type_party": "Notice" },
          "template": "{{party_filing}}'s {{notice_type}} Notice{{#notice_other_specify}} - {{notice_other_specify}}{{/notice_other_specify}}"
        },
        {
          "id": "disclosure_party",
          "when": { "filing_type_party": "Disclosure" },
          "template": "{{party_filing}}'s Disclosure{{#disclosure_specify}} - {{disclosure_specify}}{{/disclosure_specify}}"
        },
        {
          "id": "ruling_motion_judge",
          "when": { "filing_type_judge": "Ruling on Motion" },
          "template": "Order re {{ruling_motion_specify}}"
        },
        {
          "id": "other_order_judge",
          "when": { "filing_type_judge": "Other Order" },
          "template": "{{other_order_specify}}"
        },
        {
          "id": "default",
          "template": "{{date|YYYY-MM-DD}}_{{party_filing|slug}}_{{filing_type_party|slug}}{{filing_type_judge|slug}}"
        }
      ],
      "metadata": ["filing", "{{party_filing}}", "{{filing_type_party}}", "{{filing_type_judge}}"]
    },
