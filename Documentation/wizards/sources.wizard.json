{
  "version": 2,
  "entity": "sources",
  "types": [
    {
      "id": "transcript",
      "label": "Transcript",
      "view": "dialogue",
      "defaultEmoji": "üìù",
      "defaultIconPath": "transcript.svg",
      "fields": [
        {
          "id": "hearing_type",
          "label": "Hearing Type",
          "type": "select",
          "options": [
            "Arraignment",
            "Preliminary Examination",
            "Pretrial Hearing",
            "Status Conference",
            "Motion Hearing",
            "Final Pretrial",
            "Plea Hearing",
            "Trial",
            "Sentencing",
            "Resentencing",
            "Postconviction Hearing",
            "Ginther Hearing",
            "Other"
          ]
        },
        {
          "id": "hearing_type_other_source_name",
          "label": "Source Name",
          "type": "text",
          "required": true,
          "show_if": { "hearing_type": "Other" },
          "help": "Enter a descriptive name for this source"
        },
        {
          "id": "hearing_type_other_short_cite",
          "label": "Short Cite",
          "type": "text",
          "required": true,
          "show_if": { "hearing_type": "Other" },
          "help": "Enter a short citation reference"
        },
        {
          "id": "motion_specify",
          "label": "Specify Motions",
          "type": "textarea",
          "show_if": { "hearing_type": "Motion Hearing" },
          "help": "List the motions being heard"
        },
        {
          "id": "motion_witness_testimony",
          "label": "Witness Testimony Received?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Motion Hearing" }
        },
        {
          "id": "motion_witnesses",
          "label": "Select Witnesses",
          "type": "person_multi_select",
          "show_if": { "motion_witness_testimony": "Yes" },
          "help": "Select witnesses who testified"
        },
        {
          "id": "trial_volume",
          "label": "Trial Volume Number",
          "type": "text",
          "show_if": { "hearing_type": "Trial" },
          "help": "Specify volume number if applicable"
        },
        {
          "id": "trial_jury_selected",
          "label": "Jury Selected?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Trial" }
        },
        {
          "id": "trial_verdict_reached",
          "label": "Verdict Reached?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Trial" }
        },
        {
          "id": "postconviction_witness_testimony",
          "label": "Witness Testimony Received?",
          "type": "select",
          "options": ["Yes", "No"],
          "show_if": { "hearing_type": "Postconviction Hearing" }
        },
        {
          "id": "postconviction_witnesses",
          "label": "Select Witnesses",
          "type": "person_multi_select",
          "show_if": { "postconviction_witness_testimony": "Yes" },
          "help": "Select witnesses who testified"
        },
        {
          "id": "case_court_combo",
          "label": "Case & Court",
          "type": "case_court_combo",
          "required": true,
          "help": "Select the case and court/case number for this transcript."
        },
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea"
        }
      ],
      "logic": [],
      "filename": [
        {
          "id": "other",
          "when": { "hearing_type": "Other" },
          "template": "{{hearing_type_other_source_name|slug}}.pdf"
        },
        {
          "id": "default",
          "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{hearing_type|slug}}_Transcript.pdf"
        }
      ],
      "tags": ["transcript", "{{court}}", "{{hearing_type}}"]
    },
    {
      "id": "transcript_other",
      "label": "Transcript: Other",
      "view": "dialogue",
      "defaultEmoji": "üìù",
      "defaultIconPath": "transcript.svg",
      "fields": [
        {
          "id": "source_name",
          "label": "Source Name",
          "type": "text",
          "required": true,
          "help": "Enter a descriptive name for this source"
        },
        {
          "id": "short_cite",
          "label": "Short Cite",
          "type": "text",
          "required": true,
          "help": "Enter a short citation reference"
        },
        {
          "id": "source_date",
          "label": "Source Date (optional)",
          "type": "text",
          "help": "Enter date in YYYY-MM-DD format if known"
        },
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea"
        }
      ],
      "logic": [],
      "filename": [
        {
          "id": "with_date",
          "when": { "source_date": "*" },
          "template": "{{source_date}}_{{source_name|slug}}.pdf"
        },
        {
          "id": "default",
          "template": "{{source_name|slug}}.pdf"
        }
      ],
      "tags": ["transcript", "other"]
    },
    {
      "id": "legal_filing",
      "label": "Legal Filing",
      "view": "narrative",
      "defaultEmoji": "üìö",
      "defaultIconPath": "filing.svg",
      "fields": [
        { "id": "case_court_combo", "label": "Case & Court", "type": "case_court_combo", "required": true, "help": "Select the case and court/case number for this filing." },
        { "id": "filer", "label": "Filer", "type": "select", "options": ["Court", "Prosecutor", "Defendant", "Other"], "required": true },
        { "id": "court_level", "label": "Court Level", "type": "select", "options": ["District Court", "Circuit Court", "Court of Appeals", "Supreme Court"], "show_if": { "filer": "Court" } },

        { "id": "filing_type_court_district", "label": "Filing Type (District Court)", "type": "select", "options": ["Arrest Warrant", "Search Warrant", "Bindover", "Other"], "show_if": { "filer": "Court", "court_level": "District Court" } },
        { "id": "district_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_court_district": "Other" } },

        { "id": "filing_type_court_circuit", "label": "Filing Type (Circuit Court)", "type": "select", "options": ["Scheduling Order", "Order re Motion", "Other Order", "Judgment of Sentence", "Verdict", "Claim of Appeal", "Notice of Appointment", "Order", "Other"], "show_if": { "filer": "Court", "court_level": "Circuit Court" } },
        { "id": "circuit_order_motion_specify", "label": "Specify Motion", "type": "text", "show_if": { "filing_type_court_circuit": "Order re Motion" } },
        { "id": "circuit_other_order_specify", "label": "Specify Other Order", "type": "text", "show_if": { "filing_type_court_circuit": "Other Order" } },
        { "id": "circuit_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_court_circuit": "Other" } },

        { "id": "filing_type_court_coa", "label": "Filing Type (Court of Appeals)", "type": "select", "options": ["Unpublished Opinion", "Published Opinion", "Order Granting/Denying Remand", "Administrative Order", "Other Order", "Notice of Oral Argument", "Correspondence", "Other"], "show_if": { "filer": "Court", "court_level": "Court of Appeals" } },
        { "id": "coa_admin_order_specify", "label": "Specify Administrative Order", "type": "text", "show_if": { "filing_type_court_coa": "Administrative Order" } },
        { "id": "coa_other_order_specify", "label": "Specify Other Order", "type": "text", "show_if": { "filing_type_court_coa": "Other Order" } },
        { "id": "coa_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_court_coa": "Other" } },

        { "id": "filing_type_court_sc", "label": "Filing Type (Supreme Court)", "type": "select", "options": ["Order re Leave to Appeal", "Opinion", "Other Order", "Other"], "show_if": { "filer": "Court", "court_level": "Supreme Court" } },
        { "id": "filing_type_court_sc", "label": "Filing Type (Supreme Court)", "type": "select", "options": ["Order re Leave to Appeal", "Opinion", "Other Order", "Other"], "show_if": { "filer": "Court", "court": "Supreme Court" } },
        { "id": "sc_lta_disposition", "label": "Leave to Appeal Disposition", "type": "select", "options": ["Grant", "Deny", "MOAA", "Remand", "Other"], "show_if": { "filing_type_court_sc": "Order re Leave to Appeal" } },
        { "id": "sc_lta_other_specify", "label": "Specify Other Disposition", "type": "text", "show_if": { "sc_lta_disposition": "Other" } },
        { "id": "sc_other_order_specify", "label": "Specify Other Order", "type": "text", "show_if": { "filing_type_court_sc": "Other Order" } },
        { "id": "sc_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_court_sc": "Other" } },

        { "id": "filing_type_prosecutor", "label": "Filing Type (Prosecutor)", "type": "select", "options": ["Complaint", "Information", "Motion", "Brief on Appeal", "Other"], "show_if": { "filer": "Prosecutor" } },
        { "id": "pros_motion_specify", "label": "Specify Motion", "type": "text", "show_if": { "filing_type_prosecutor": "Motion" } },
        { "id": "pros_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_prosecutor": "Other" } },

        { "id": "filing_type_defendant", "label": "Filing Type (Defendant)", "type": "select", "options": ["Motion", "Appearance", "Discovery Demand", "Speedy Trial Demand", "Sentencing Memorandum", "Brief on Appeal", "Application", "Other"], "show_if": { "filer": "Defendant" } },
        { "id": "def_motion_specify", "label": "Specify Motion", "type": "text", "show_if": { "filing_type_defendant": "Motion" } },
        { "id": "def_other_specify", "label": "Specify Other", "type": "text", "show_if": { "filing_type_defendant": "Other" } },
        
        { "id": "filer_other_source_name", "label": "Source Name", "type": "text", "required": true, "show_if": { "filer": "Other" }, "help": "Enter a descriptive name for this source" },
        { "id": "filer_other_short_cite", "label": "Short Cite", "type": "text", "required": true, "show_if": { "filer": "Other" }, "help": "Enter a short citation reference" },
        
        {
          "id": "notes",
          "label": "Notes",
          "type": "textarea"
        }
      ],
      "logic": [],
      "filename": [
        { "id": "court_dc_arrest_warrant", "when": { "filer": "Court", "court": "District Court", "filing_type_court_district": "Arrest Warrant" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Arrest_Warrant.pdf" },
        { "id": "court_dc_search_warrant", "when": { "filer": "Court", "court": "District Court", "filing_type_court_district": "Search Warrant" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Search_Warrant.pdf" },
        { "id": "court_dc_bindover", "when": { "filer": "Court", "court": "District Court", "filing_type_court_district": "Bindover" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Bindover.pdf" },
        { "id": "court_dc_other", "when": { "filer": "Court", "court": "District Court", "filing_type_court_district": "Other" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{district_other_specify|slug}}.pdf" },

        { "id": "court_circ_sched_order", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Scheduling Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Scheduling_Order.pdf" },
        { "id": "court_circ_order_re_motion", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Order re Motion" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Order_re_{{circuit_order_motion_specify|slug}}.pdf" },
        { "id": "court_circ_other_order", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Other Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{circuit_other_order_specify|slug}}.pdf" },
        { "id": "court_circ_jos", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Judgment of Sentence" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Judgment_of_Sentence.pdf" },
        { "id": "court_circ_verdict", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Verdict" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Verdict.pdf" },
        { "id": "court_circ_coa", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Claim of Appeal" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Claim_of_Appeal.pdf" },
        { "id": "court_circ_noa", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Notice of Appointment" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Notice_of_Appointment.pdf" },
        { "id": "court_circ_order", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Order.pdf" },
        { "id": "court_circ_other", "when": { "filer": "Court", "court": "Circuit Court", "filing_type_court_circuit": "Other" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{circuit_other_specify|slug}}.pdf" },

        { "id": "court_coa_unpub", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Unpublished Opinion" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Unpublished_Opinion.pdf" },
        { "id": "court_coa_pub", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Published Opinion" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Published_Opinion.pdf" },
        { "id": "court_coa_remand", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Order Granting/Denying Remand" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Order_Granting-Denying_Remand.pdf" },
        { "id": "court_coa_admin_order", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Administrative Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{coa_admin_order_specify|slug}}.pdf" },
        { "id": "court_coa_other_order", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Other Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{coa_other_order_specify|slug}}.pdf" },
        { "id": "court_coa_noa", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Notice of Oral Argument" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Notice_of_Oral_Argument.pdf" },
        { "id": "court_coa_corresp", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Correspondence" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Correspondence.pdf" },
        { "id": "court_coa_other", "when": { "filer": "Court", "court": "Court of Appeals", "filing_type_court_coa": "Other" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{coa_other_specify|slug}}.pdf" },

        { "id": "court_sc_lta_other_disp", "when": { "filer": "Court", "court": "Supreme Court", "filing_type_court_sc": "Order re Leave to Appeal", "sc_lta_disposition": "Other" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Order_re_Leave_to_Appeal_{{sc_lta_disposition|slug}}_{{sc_lta_other_specify|slug}}.pdf" },
        { "id": "court_sc_lta", "when": { "filer": "Court", "court": "Supreme Court", "filing_type_court_sc": "Order re Leave to Appeal" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Order_re_Leave_to_Appeal_{{sc_lta_disposition|slug}}.pdf" },
        { "id": "court_sc_opinion", "when": { "filer": "Court", "court": "Supreme Court", "filing_type_court_sc": "Opinion" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_Opinion.pdf" },
        { "id": "court_sc_other_order", "when": { "filer": "Court", "court": "Supreme Court", "filing_type_court_sc": "Other Order" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{sc_other_order_specify|slug}}.pdf" },
        { "id": "court_sc_other", "when": { "filer": "Court", "court": "Supreme Court", "filing_type_court_sc": "Other" }, "template": "{{date|YYYY-MM-DD}}_{{court|slug}}_{{sc_other_specify|slug}}.pdf" },

        { "id": "pros_motion", "when": { "filer": "Prosecutor", "filing_type_prosecutor": "Motion" }, "template": "{{date|YYYY-MM-DD}}_Prosecutor_Motion_{{pros_motion_specify|slug}}.pdf" },
        { "id": "pros_other", "when": { "filer": "Prosecutor", "filing_type_prosecutor": "Other" }, "template": "{{date|YYYY-MM-DD}}_Prosecutor_{{pros_other_specify|slug}}.pdf" },
        { "id": "pros_default", "when": { "filer": "Prosecutor" }, "template": "{{date|YYYY-MM-DD}}_Prosecutor_{{filing_type_prosecutor|slug}}.pdf" },

        { "id": "def_motion", "when": { "filer": "Defendant", "filing_type_defendant": "Motion" }, "template": "{{date|YYYY-MM-DD}}_Defendant_Motion_{{def_motion_specify|slug}}.pdf" },
        { "id": "def_other", "when": { "filer": "Defendant", "filing_type_defendant": "Other" }, "template": "{{date|YYYY-MM-DD}}_Defendant_{{def_other_specify|slug}}.pdf" },
        { "id": "def_default", "when": { "filer": "Defendant" }, "template": "{{date|YYYY-MM-DD}}_Defendant_{{filing_type_defendant|slug}}.pdf" },

        { "id": "default", "template": "{{date|YYYY-MM-DD}}_legal_filing.pdf" }
      ],
      "tags": ["legal-filing", "{{filer}}", "{{court}}"]
